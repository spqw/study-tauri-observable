{
  "$schema": "https://raw.githubusercontent.com/nicoverali/tauri-v2-schema/main/schema.json",
  "productName": "Observable",
  "version": "0.1.0",
  "identifier": "net.spqw.observable",
  "build": {
    "frontendDist": "../ui",
    "devUrl": "http://localhost:1420"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Observable",
        "width": 1280,
        "height": 860,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "url": "index.html"
      }
    ],
    "macOSPrivateApi": true,
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15"
    }
  }
}
